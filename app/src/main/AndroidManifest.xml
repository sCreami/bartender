<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="lsinf1225.groupeq.bartender" >

    <application
        android:name="Bartender"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CarteActivity"
            android:label="@string/title_activity_carte"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lsinf1225.groupeq.bartender.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.FactureActivity"
            android:label="@string/title_activity_facture"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lsinf1225.groupeq.bartender.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.MusiqueActivity"
            android:label="@string/title_activity_musique"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lsinf1225.groupeq.bartender.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.InventaireActivity"
            android:label="@string/title_activity_inventaire"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lsinf1225.groupeq.bartender.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.OptionsActivity"
            android:label="@string/title_activity_options"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lsinf1225.groupeq.bartender.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.ConnexionActivity"
            android:label="@string/title_activity_connexion"
            android:parentActivityName=".activity.OptionsActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lsinf1225.groupeq.bartender.activity.OptionsActivity" />
        </activity>
        <activity
            android:name=".activity.DescriptionActivity"
            android:label="@string/title_activity_description"
            android:parentActivityName=".activity.CarteActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="lsinf1225.groupeq.bartender.activity.CarteActivity" />
        </activity>
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/title_activity_splash" >
        </activity>
    </application>

</manifest>
